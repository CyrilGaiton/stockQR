             xsi:schemaLocation="http://wmlns.jcp.org/xml/ns/persistence"
             version="2.1">
    <persistence-unit  name="BDR" transaction-type="JTA">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <jta-data-source>jdbc/postgres-pool</jta-data-source>


        <class>fr.utln.ancy.Chaise</class>
        <class>fr.utln.ancy.Bureau</class>

        <properties>
            <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
            <!--<property name="eclipselink.create-ddl-jdbc-file-name" value="createDDL_ddlGeneration.sql"/>-->
            <!--<property name="eclipselink.drop-ddl-jdbc-file-name" value="dropDDL_ddlGeneration.sql"/>-->
        </properties>

    </persistence-unit>

</persistence>